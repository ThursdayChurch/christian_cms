<table class='nice_table'>
	<thead>
		<tr>
			<td class='heading'><%= link_to "Nombre", 	 :sort => "first_name" %></td>
			<td class='heading'><%= link_to "Appellido", :sort => "last_name" %></td>
			<td class='heading'><%= link_to "Fecha",	 :sort => "birthdate" %></td>
		</tr>
	</thead>

	<tbody>
	<% for birthday in @birthdays %>
  	<tr>
		  <td class='table_center'><%= birthday.first_name %> </td>
		  <td class='table_center'><%= birthday.last_name %> </td>
		  <td class='table_center'><%= l(birthday.birthdate, :format => "%B %d") %> </td>
  	</tr>
	<% end %>
	</tbody>

</table>

<% if !params[:month] %>
  <br />
	<p><%= will_paginate @birthdays %></p>
<% end %>