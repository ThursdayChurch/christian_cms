    - for user in @users
      %tr
        %td{:class=> "mouse", :onclick => "document.location.href='#{admin_user_path(user)}'"}
          = link_to user.login, admin_user_path(user)
        %td{:class=> "mouse", :onclick => "document.location.href='#{admin_user_path(user)}'"} 
          =h user.first_name
        %td{:class=> "mouse", :onclick => "document.location.href='#{admin_user_path(user)}'"}
          =h user.last_name
        %td{:class=> "mouse", :onclick => "document.location.href='#{admin_user_path(user)}'"}
          =h user.email
        %td{:class=> "mouse", :onclick => "document.location.href='#{admin_user_path(user)}'"}
          =h user.nationality
        %td 
          = user.created_at.strftime("%d %b, %Y")
        %td 
          = user.birthday.strftime("%d %b") if user.birthday
        %td
          = link_to 'Editar', edit_admin_user_path(user)
        %td 
          = link_to 'Del', admin_user_path(user), :confirm => 'Estas seguro que quieres deletar este usuario?', :method => :delete


