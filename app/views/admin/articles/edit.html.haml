- @title = "Editando Articulo:  #{@article.title}"
%h2= @title

%h3 
  %i 
    %u= @article.title

- form_for(@article, :url => { :action => "update" } ) do |f| 
  = f.error_messages
  = render :partial => 'form', :locals => { :f => f, :article => @article }
  = f.submit 'Salvar'
  
= link_to 'Volver', admin_articles_path
