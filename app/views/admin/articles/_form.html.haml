%p
  = f.label :title
  %br
  = f.text_field :title
%p
  = f.label :permalink
  %br
  = f.text_field :permalink

%p
  = f.label :category
  %br
  = f.select :category, Category::LIST.collect

%p
  = f.label :author
  %br
  = f.text_field :author, {:size => 20, :value => current_user.login}

%p
  = f.label :short_text
  %br
  = textile_editor :article, :short_body, :rows => 28, :cols => 90

%p
  = f.label :long_text
  %br
  = textile_editor :article, :body, :rows => 28, :cols => 90

%p
  = f.check_box :approved
  %label
    Active

%p 
  %label
    Published Date
  %br
  = f.date_select :published_at, :start_year => Time.now.year-2, :end_year => Time.now.year+2


