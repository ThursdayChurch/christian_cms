<% @title = "ConfiguraciÃ³n del sitio" %>

<h3><%= @title %></h3>

<table id="itsthetable">
<tr>
	<% form_for :setting, @setting, :url=>{:action=>'create'} do |f| -%>
		<th><%= f.text_field :var, :size => 20 %></th>
		<th><%= f.text_field :value, :size => 58 %></th>
		<th><%= submit_tag 'Crear' %></th>
	<% end %>
</tr>
	<% @settings.each do |setting| -%>
		<% form_for :setting, setting, :url=>{:action=>'update'} do |f| -%>
			<%= f.hidden_field :id %>
			<tr>
				<td id="setting_<%= setting.id %>"><%= setting.var %></td>
				<td><%= f.text_field :value, :size => 58 %></td>
				<td><%= submit_tag 'Salvar' %></td>
				<td><%= link_to 'Del', {:action=>'delete', :id=>setting.id}, :confirm=>'Estas Seguro?' %></td>
			</tr>
		<% end %>
	<% end %>
</table>