%h3
  Comments
- @comments.each do |t|
  .comment
    %h4
      = boolean_to_image_small(t.approved) 
    %p
      name: 
      = h t.name
    %p 
      email:
      = h t.email
    %p
      website:
      = h t.website_url
    %p
      Submitted on: 
      = t.created_at
    %p
      = h t.comment
    %p
      = approve_link(t)
      = link_to 'Show', admin_comment_path(t)
      = link_to 'Edit', edit_admin_comment_path(t)
      = link_to 'Destroy', admin_comment_path(t), :confirm => 'Are you sure?', :method => :delete
