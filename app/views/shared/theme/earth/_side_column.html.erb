<!-- Sidebar -->
<div id="sidebar">
	<ul>
		<li>
			<h2>La Comunidad</h2>
			<ul class="items">
			  <% @sidebar_items.each do |item| %>
			    <li> <%= link_to item.title, item.url %> </li>
			  <% end %>
    		<li> <%= link_to "Dejar Mensaje", "/messages/new" %> </li>
    		<li> <%= link_to "Usuarios", users_path %></li>
    		<% if current_user %>
        <li> <%= link_to "Editar my informacion", edit_user_path(current_user) %> </li>
        <li> <%= link_to "My Profile", current_user %> </li>
        <% end %>
    	</ul>
    	<%= image_tag "/images/iglesia3.png" %>
		</li>
		
		<li>
		  <h2> Cumpleanos del Mes </h2>
    	<ul>
    		<% Birthday.get_this_month.each do |t| %>
    			<li>
    			  <span><%= t.birthdate.strftime("%d") %></span><%= link_to("#{t.first_name} #{t.last_name}",month_birthdays_path) %>
    			</li>
    		<% end %>
    	</ul>
		</li>
		
		<%= image_tag "/images/jesus.jpeg" %>
		
		<h2> Links </h2>
  	<ul class="links">
  	  <% @link_items.each do |t| %>
  	    <li> <%= menu_item_link(t) %> </li>
  	  <% end %>
  	</ul>

    <br />
	  <h2> Recent Visitors </h2>
    <%= render(:partial => "/shared/feedjit") if RAILS_ENV == "production" %>
		
	</ul>
</div>
<!-- end #sidebar -->

