<% if @article %>
  <% #cache "articles/#{@article.id}" do 
  %>
		<h2 style="color:blue"> <%= @article.title %> </h2>
		<div class="article">
			<%= @article.short_body %>
			<br />
			<%= @article.body %>
			<p class="created_at"><%= @article.created_at.strftime("%B %d, %Y") %> </p>
		</div>
	<% end %>
	<% if authorized_admin? %>
		<div class="edit_item_menu">
			<%= link_to 'Editar', edit_article_path(@article) %> | 
			<%= link_to "Deletar", {:action => 'destroy', :id => @article} , :confirm => "Are you sure?", :method => :delete %> | 
			<%= link_to 'Crear', new_article_path %> 
		</div>
  <% #end 
  %>
<% end %>
