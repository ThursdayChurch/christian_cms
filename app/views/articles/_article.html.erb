<div class="article">
	<h2> <%= link_to(article.title, permalink_url(article.permalink)) %> </h2>
	
	<p> 
		<%= article.short_body %>
		<%= link_to("leer mas...", permalink_url(article.permalink), :class => 'read_more_link') %>
	</p>
	<p class="created_at"><%= article.created_at.strftime("%B %d, %Y") %></p>

</div>