
<% @articles.each do |article| %>
	<div class="article">
		<h2> 
			<%= link_to(highlight(article.title, @query.to_s), permalink_url(article.permalink)) %> 
		</h2>
		<p> <%= highlight(article.short_body, @query.to_s) %></p>
		<p> <%= article.body %></p>
		<p class="created_at"><%= article.created_at.strftime("%B %d, %Y") %></p>
	</div>
<% end %>

<%= will_paginate @articles %>
